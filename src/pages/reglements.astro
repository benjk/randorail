---
import MainLayout from '../layouts/MainLayout.astro';
import content from '../data/content.json';
const data = content.pages.reglements;
---

<MainLayout title={data.docTitle} withSeo={true}>
  <div class="reglements-wrapper content-container">
    <div class="full-wrapper full-height">
      <div class="reglements-container full-content">
        <div class="title-container">
          <h2>{data.title}</h2>
          <h2>{data.subTitle}</h2>
        </div>

        <section class="full-text-section-wrapper">
          <h3>Rando-rail</h3>
          <div class="p-wrapper">
            {
              data.rando.map((article, index) => (
                <p class="separated-p">
                  <span class="strong-span">Article {index + 1} :</span>{' '}
                  {article}
                </p>
              ))
            }
          </div>
        </section>

        <section class="full-text-section-wrapper">
          <h3>Trotti-trail</h3>
          <div class="p-wrapper">
            {
              data.trotti.map((article, index) => (
                <p class="separated-p">
                  <span class="strong-span">Article {index + 1} :</span>{' '}
                  {article}
                </p>
              ))
            }
          </div>
        </section>
      </div>
    </div>
  </div>
</MainLayout>

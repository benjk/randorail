---
import { VIDEO_CONFIG } from '../config';

const {
  homePreload = false,
  priorities = {
    lobster: 'high',
    patua: null,
    logo: 'high',
  }
} = Astro.props;
---
<!-- PRECONNECT CDN -->
<link rel="dns-prefetch" href={VIDEO_CONFIG.globalCdnUrl} />
<link rel="preconnect" href={VIDEO_CONFIG.globalCdnUrl} crossorigin />

<!-- Font Lobster -->
<link
  rel="preload"
  as="font"
  type="font/woff2"
  href="/fonts/Lobster.woff2"
  crossorigin
  fetchpriority={priorities.lobster || undefined}
/>

<!-- Font Patua -->
<link
  rel="preload"
  as="font"
  type="font/woff2"
  href="/fonts/CreteRound-Regular.woff2"
  crossorigin
  fetchpriority={priorities.patua || undefined}
/>

<!-- Logo -->
<link
  rel="preload"
  as="image"
  href="/img/static/header_logo.webp"
  fetchpriority={priorities.logo || undefined}
/>